pcm.!default {
    type asym
    playback.pcm "dmixer"
    capture.pcm "plughw:4,0"
}

pcm.dmixer {
    type dmix
    ipc_key 1024
    slave {
        pcm "hw:2,0"
        period_time 0
        period_size 1024
        buffer_size 4096
        rate 48000
    }
    bindings {
        0 0
        1 1
    }
}

ctl.!default {
    type hw
    card 2
}
