# Eksempel på miljøvariabler for ChatGPT-anda (Anda) prosjektet

# ============================================================================
# Duck Identity
# ============================================================================

# Name of this duck (used for identity, backups and identification)
DUCK_NAME=Samantha

# Wake word engine: 'porcupine' or 'openwakeword'
WAKE_WORD_ENGINE=porcupine

# Wake word model path (relative to project root, or absolute)
# Leave empty for auto-detection based on DUCK_NAME and engine
# Porcupine: porcupine/<name>_en_raspberry-pi_v4_0_0.ppn
# OpenWakeWord: openwakeword_models/<Name>.onnx
WAKE_WORD_MODEL=

# Porcupine sensitivity (0.0-1.0, higher = more sensitive)
WAKE_WORD_SENSITIVITY=0.9

# OpenWakeWord threshold (0.0-1.0, lower = more sensitive)
WAKE_WORD_THRESHOLD=0.25

# Feature flags - disable features not relevant for this duck
ENABLE_HOME_ASSISTANT=true
ENABLE_PRUSALINK=true
ENABLE_DUCK_VISION=true
ENABLE_MQTT=true

# Duck network - comma-separated list of all ducks
DUCK_NETWORK=samantha,seven

# Owner name (defaults to 'creator' from identity JSON if not set)
# OWNER_NAME=Osmund

# Owner name aliases for voice/face recognition mapping (comma-separated)
OWNER_ALIASES=åsmund,Åsmund


# ============================================================================
# AI & Speech Services
# ============================================================================

# Azure Speech Service (Text-to-Speech)
AZURE_TTS_KEY=your_azure_tts_key_here
AZURE_TTS_REGION=westeurope

# Azure Speech Service (Speech-to-Text)
AZURE_STT_KEY=your_azure_stt_key_here
AZURE_STT_REGION=norwayeast

# OpenAI API (for ChatGPT responses and personality analysis)
OPENAI_API_KEY=sk-your_openai_api_key_here

# Google Gemini API (optional, for free personality analysis)
# Get free API key at: https://aistudio.google.com
GOOGLE_API_KEY=your_google_api_key_here

# Picovoice Access Key (for wake word detection)
PICOVOICE_API_KEY=your_picovoice_access_key_here


# ============================================================================
# Home Assistant Integration
# ============================================================================

# Home Assistant Long-Lived Access Token
# Create in: Settings → Profile → Long-Lived Access Tokens
HA_TOKEN=your_long_lived_access_token_here

# Local Home Assistant URL (used when at home, fast)
HA_URL=http://192.168.1.100:8123

# Home Assistant Cloud URL (Nabu Casa, for remote access)
# Find in: Settings → Home Assistant Cloud → Remote Control
# Example: https://xxxxxxxxxxxxx.ui.nabu.casa
HA_CLOUD_URL=https://your_nabu_casa_url.ui.nabu.casa


# ============================================================================
# Optional Services
# ============================================================================

# Anthropic Claude API (optional, for advanced personality analysis)
# Get at: https://console.anthropic.com
ANTHROPIC_API_KEY=your_anthropic_api_key_here
# Web Search (Brave Search API)
# Get free API key at: https://api.search.brave.com/register
# Free tier: 2000 searches/month
BRAVE_SEARCH_API_KEY=your_brave_search_api_key_here


# ============================================================================
# Electricity Price Configuration (Norway)
# ============================================================================

# Strømstøtte parameters (2026)
# Threshold for electricity subsidy (kr/kWh)
ELECTRICITY_SUBSIDY_THRESHOLD=0.73

# Subsidy percentage (0.90 = 90% of price above threshold)
ELECTRICITY_SUBSIDY_PERCENTAGE=0.90

# VAT rate (0.25 = 25%)
ELECTRICITY_VAT_RATE=0.25

# Norgespris fixed rate (kr/kWh incl. VAT, Oct 2025 - Dec 2026)
ELECTRICITY_NORGESPRIS=0.50

# Default electricity region (NO1=Oslo, NO2=Kristiansand, NO3=Trondheim, NO4=Tromsø, NO5=Bergen)
ELECTRICITY_REGION=NO2

# Estimated monthly consumption for savings calculation (kWh)
ELECTRICITY_MONTHLY_KWH=300
